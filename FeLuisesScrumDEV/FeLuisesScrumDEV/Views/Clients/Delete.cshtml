<!DOCTYPE html>
<html>
@model FeLuisesScrumDEV.Models.Client

<head>
    @{
        ViewBag.Title = "Delete";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">

</head>

<body>
    @if (Session["userName"] == null)
    {

        <div class="container">

            <div class="card">
                <div class="card-header">
                    <h2 id="heading-red">No se vale hackear!</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Debe logguearse para hacer uso de la aplicación</h5>
                    <a href=@Url.Action("Index", "Login") class="btn btn-danger">Volver</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <h2 id="heading-red">Desea eliminar este cliente?</h2>
            <hr />
            <div>
                <div class="card rounded" style="width: auto; height: auto;" id="shadow-Fe1">

                    <div class="card-header  text-white" id="back-Fe1">
                        <h2>Cliente</h2>
                    </div>

                    <div class="card-body">

                        <dl class="dl-horizontal">
                            <dt>
                                <b>Nombre</b>
                                @*@Html.DisplayNameFor(model => model.clientName)*@
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.clientName)
                            </dd>

                            <dt>
                                <b>Apellido</b>
                                @*@Html.DisplayNameFor(model => model.clientLastName)*@
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.clientLastName)
                            </dd>

                            <dt>
                                <b>Segundo Apellido</b>
                                @*@Html.DisplayNameFor(model => model.clientSecondLastName)*@
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.clientSecondLastName)
                            </dd>

                            <dt>
                                <b>Compañía</b>
                                @*@Html.DisplayNameFor(model => model.company)*@
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.company)
                            </dd>

                            <dt>
                                <b>Teléfono</b>
                                @*@Html.DisplayNameFor(model => model.tel)*@
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.tel)
                            </dd>

                            <dt>
                                <b>E-Mail</b>
                                @*@Html.DisplayNameFor(model => model.email)*@
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.email)
                            </dd>

                        </dl>
                    </div>
                    <div class="card-footer" id="back-Fe1">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="image" src="~/Images/accept.svg" class="btn btn-outline-success" alt="Submit" />
                                <a class="btn btn-outline-danger" role="button" href="@Url.Action("Details", "Clients", new { id = Model.idClientPK })">
                                    <img src="~/Images/cancel.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    </body>
</html>