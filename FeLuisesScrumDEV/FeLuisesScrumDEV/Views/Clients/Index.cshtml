<!DOCTYPE html>
<html>
@model IEnumerable<FeLuisesScrumDEV.Models.Client>
<head>
    <meta charset="utf-8" />
    @{
        ViewBag.Title = "IndexClients";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <script>
        //Este script es para lograr hacer una tabla que acomode y busque sus tuplas.
        $(document).ready(function () {
            $('#clientsIndex').DataTable();
        });
    </script>
</head>

<body>
    @if (Session["userName"] == null)
    {

        <div class="container">

            <div class="card">
                <div class="card-header">
                    <h2 id="heading-red">No se vale hackear!</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Debe logguearse para hacer uso de la aplicación</h5>
                    <a href=@Url.Action("Index", "Login") class="btn btn-danger">Volver</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="float-md-right">
            <a class="btn btn-outline-success" role="button" href=@Url.Action("Create", "Clients")>
                <img src="~/Images/add.svg" width="40" height="40" class="d-inline-block align-top" alt="">
            </a>
        </div>
        <div class="container">
            <h2>Clientes</h2>
            <hr />

            <table id="clientsIndex" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Nombre
                            @*@Html.DisplayNameFor(model => model.clientName)*@
                        </th>
                        <th>
                            Apellido
                            @* @Html.DisplayNameFor(model => model.clientLastName) *@
                        </th>
                        <th>
                            Segundo Apellido
                            @* @Html.DisplayNameFor(model => model.clientSecondLastName) *@
                        </th>
                        <th>
                            Compañía
                            @*@Html.DisplayNameFor(model => model.company)*@
                        </th>
                        <th>
                            Teléfono
                            @*@Html.DisplayNameFor(model => model.tel)*@
                        </th>
                        <th>
                            E-Mail
                            @*@Html.DisplayNameFor(model => model.email)*@
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn" role="button" href="@Url.Action("Details", "Clients", new { id = item.idClientPK })">
                                    <img src="~/Images/info.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.clientName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.clientLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.clientSecondLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.company)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</body>
</html>