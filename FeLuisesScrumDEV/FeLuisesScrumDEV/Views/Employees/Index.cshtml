<!DOCTYPE html>
<html>
@model IEnumerable<FeLuisesScrumDEV.Models.Employee>
<head>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <script>
        $(document).ready(function () {
            $('#employeesIndex').DataTable();
        });
    </script>

</head>

<body>
    <div class="container">
        <h2>Empleados</h2>
        <br />
        <table id="employeesIndex" class="table table-striped table-bordered">

            <thead>

                <tr>
                    <th>
                        Nombre
                        @*@Html.DisplayNameFor(model => model.employeeName)*@
                    </th>
                    <th>
                        Apellido
                        @*@Html.DisplayNameFor(model => model.employeeLastName)*@
                    </th>
                    <th>
                        Apellido
                        @*@Html.DisplayNameFor(model => model.employeeSecondLastName)*@
                    </th>
                    <th>
                        Teléfono
                        @*@Html.DisplayNameFor(model => model.tel)*@
                    </th>
                    <th>
                        E-mail
                        @*@Html.DisplayNameFor(model => model.email)*@
                    </th>
                    <th>
                        Disponibilidad
                        @*@Html.DisplayNameFor(model => model.availability)*@
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Details", "Employees", new { id = item.idEmployeePK } )">@Html.DisplayFor(modelItem => item.employeeName)</a>

                        </td>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Details", "Employees", new { id = item.idEmployeePK } )">@Html.DisplayFor(modelItem => item.employeeLastName)</a>
                        </td>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Details", "Employees", new { id = item.idEmployeePK } )">@Html.DisplayFor(modelItem => item.employeeSecondLastName)</a>
                        </td>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Details", "Employees", new { id = item.idEmployeePK } )">@Html.DisplayFor(modelItem => item.tel)</a>
                        </td>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Details", "Employees", new { id = item.idEmployeePK } )">@Html.DisplayFor(modelItem => item.email)</a>
                        </td>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Edit", "Employees", new { id = item.idEmployeePK } )">
                                @*@Html.DisplayFor(modelItem => item.availability)*@
                                <img src="~/Images/edit.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <p>
        <a class="btn btn-outline" role="button" href=@Url.Action("Create", "Employees" )>
            <img src="~/Images/add.svg" width="60" height="60" class="d-inline-block align-top" alt="">
        </a>
    </p>
</body>
</html>