@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FeLuisesScrumDEV.Models.Module

@{
    ViewBag.Title = "Create";
}
    <div class="container">
        <h2>Agregar Módulo</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.idProjectFKPK, "Belongs to project", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idProjectFKPK", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idProjectFKPK, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.name, "Module name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn" role="button" href="@Url.Action("Index", "Modules")">
                            <img src="~/Images/back.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                        </a>
                        <input type="image" src="~/Images/save.svg" class="btn btn btn-outline-success" alt="Submit">
                        <a class="btn btn-outline-danger" role="button" href="@Url.Action("Index", "Modules")">
                            <img src="~/Images/cancel.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                        </a>
                    </div>
                </div>
            </div>
        }
        <div>

        </div>
    </div>