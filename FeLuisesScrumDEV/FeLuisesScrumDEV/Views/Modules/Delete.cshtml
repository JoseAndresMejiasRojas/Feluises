@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FeLuisesScrumDEV.Models.Module

@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <h2>Module delete</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div>
        <div class=" container">
            <div class="card border-dark shadow rounded" style="width: auto; height: auto;">

                <div class="card-header bg-dark">
                    <h2 class="card-header text-white">Module details</h2>
                </div>
                <div class="card-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                Module name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.name)
                            </dd>

                            <dt>
                                Belongs to project
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Project.projectName)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Cancel", "Details", new { idProjectFKPK = Model.idProjectFKPK, idModulePK = Model.idModulePK }) |
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        }
    </div>
</div>