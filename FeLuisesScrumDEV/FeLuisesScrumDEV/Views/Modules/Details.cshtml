@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FeLuisesScrumDEV.Models.Module

@{
    ViewBag.Title = "Details";
}

<link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
@if (Session["userName"] == null && (Convert.ToInt32(Session["userRole"]) != 0 || Convert.ToInt32(Session["userRole"]) != 2))
{

    <div class="container">

        <div class="card">
            <div class="card-header">
                <h2 id="heading-red">No se vale hackear!</h2>
            </div>
            <div class="card-body">
                <h5 class="card-title">Debe logguearse para hacer uso de la aplicación</h5>
                <a href=@Url.Action("Index", "Login") class="btn btn-danger">Volver</a>
            </div>
        </div>
    </div>
}
else
{
    <div class=" container">
        <div class="card border-dark shadow rounded" style="width: auto; height: auto;">
            <h2 class="card-header text-white" id="back-Fe1">Detalles de Módulo</h2>
            <div class="card-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Nombre del módulo
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.name)
                        </dd>

                        <dt>
                            Perteneciente al proyecto
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Project.projectName)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="card-footer" id="back-Fe1">
                <a class="btn" role="button" href="@Url.Action("Index", "Modules")">
                    <img src="~/Images/b-back.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                </a>
                @if (Model.idModulePK != -1)
                {

                    <a class="btn" role="button" href="@Url.Action("Edit", "Modules", new { idProjectFKPK = Model.idProjectFKPK, idModulePK = Model.idModulePK })">
                        <img src="~/Images/b-edit.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                    </a>
                    <a class="btn btn-outline-danger" role="button" href="@Url.Action("Delete", "Modules", new { idProjectFKPK = Model.idProjectFKPK, idModulePK = Model.idModulePK })">
                        <img src="~/Images/b-delete.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                    </a>

                }
            </div>
        </div>
    </div>
}