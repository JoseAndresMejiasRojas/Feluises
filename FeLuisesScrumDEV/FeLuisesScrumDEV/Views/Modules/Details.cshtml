@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FeLuisesScrumDEV.Models.Module

@{
    ViewBag.Title = "Details";
}

<link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">

<div class=" container">
    <div class="card border-dark shadow rounded" style="width: auto; height: auto;">
        <h2 class="card-header" id="back-Fe1">Module details</h2>
        <div class="card-body">
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        Module name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        Belongs to project
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Project.projectName)
                    </dd>
                </dl>
            </div>
            <p>
                <a class="btn" role="button" href="@Url.Action("Index", "Modules")">
                    <img src="~/Images/back.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                </a> 
                @if (Model.idModulePK != -1)
                {
                    <a class="btn btn-outline-success" role="button" href="@Url.Action("Edit", "Modules", new { idProjectFKPK = Model.idProjectFKPK, idModulePK = Model.idModulePK })">
                        <img src="~/Images/edit.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                    </a>
                    <a class="btn btn-outline-danger" role="button" href="@Url.Action("Delete", "Modules", new { idProjectFKPK = Model.idProjectFKPK, idModulePK = Model.idModulePK })">
                        <img src="~/Images/delete.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                    </a>
                }
            </p>
        </div>
    </div>
</div>