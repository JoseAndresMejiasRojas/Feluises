<html>
@model IEnumerable<FeLuisesScrumDEV.viewModel.IndexViewModel>
<head>
    @{
        ViewBag.Title = "IndexModules";
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#moduletable").hide();
            $("#modulecards").show();
            $("#toggle").click(function () {
                $("#moduletable").toggle();
                $("#modulecards").toggle();
            });

        });
    </script>
    <script>
        $("#idProjectFKPK").change( function (event) {
            var userId = $(this).val();
            console.log(userId);
            $.ajax({
                url: "@Url.Action("GetModules","Modules")",
                data: { idProjectFKPK : userId },
                type: "Get",
                dataType: "html",    
                success: function (data) {
                    //Whatever result you have got from your controller with html partial view replace with a specific html. 
                    $("#modulesResult").html( data ); // HTML DOM replace
                }
                
            });
            console.log(data);
        });
    </script>

</head>

<body>

    <div class="float-md-right">
        <button type="button" class="btn btn-info" id="toggle">Cambiar Vista</button>
        <a class="btn btn-outline-success" role="button" href=@Url.Action("Create", "Modules" )>
            <img src="~/Images/add.svg" width="40" height="40" class="d-inline-block align-top" alt="">
        </a>
    </div>
    <div class=" container">
        <h2>Módulos</h2>
        <hr />


        <p></p>
        <p></p>
        <section id="modulecards">
            @foreach (var item in Model)
            {
                <div class="card border-dark rounded mb-3" id="shadow-Fe" style="width: auto; height:auto;">
                    <div class="card-header" id="back-Fe1">
                        <p class="card-text text-white">Proyecto: @item.Project.projectName</p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var module in item.AssociatedModules)
                            {
                                <div class="col-sm-6">
                                    <div class="card border-dark rounded shadow-none" id="shadow-None-Fe">
                                        <div class="card-header" id="back-Fe">
                                            <a class="btn text-white" role="button" href="@Url.Action("Details", "Modules", new { idProjectFKPK = module.idProjectFKPK, idModulePK = module.idModulePK } )">Módulo @module.name</a>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">Requerimientos iran aquí.</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <p></p>
            }
        </section>
        <table id="moduletable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Módulo
                    </th>
                    <th>
                        Proyecto
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    foreach (var module in item.AssociatedModules)
                    {
                        <tr>
                            <td>

                                <a class="btn" role="button" href="@Url.Action("Details", "Modules", new { idProjectFKPK = module.idProjectFKPK, idModulePK = module.idModulePK } )">@module.name</a>
                            </td>
                            <td>
                                @module.Project.projectName
                                <div class="float-md-right">
                                    <a class="btn" role="button" href="@Url.Action("Details", "Modules", new { idProjectFKPK = module.idProjectFKPK, idModulePK = module.idModulePK } )">
                                        <img src="~/Images/details.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                                    </a>
                                    @if (module.idModulePK != -1)
                                    {
                                        <a class="btn" role="button" href="@Url.Action("Edit", "Modules", new { idProjectFKPK = module.idProjectFKPK, idModulePK = module.idModulePK } )">
                                            <img src="~/Images/edit.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                                        </a>
                                    }
                                    else
                                    {
                                        <img src="~/Images/lock.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Módulo
                    </th>
                    <th>
                        Proyecto
                    </th>
                </tr>
            </tfoot>
        </table>

        <div class="card border-dark rounded mb-3" id="shadow-Fe" style="width: auto; height:auto;">
            <div class="card-header" id="back-Fe1">
                <p class="card-text text-white">
                    <div class="dropdown">
                        @Html.DropDownList("idProjectFKPK", null, "Select Project")
                    </div>
                </p>
            </div>
            <div class="card-body">
                <div id="modulesResult">
                </div>
            </div>
        </div>
        <p></p>

    </div>
</body>
</html>