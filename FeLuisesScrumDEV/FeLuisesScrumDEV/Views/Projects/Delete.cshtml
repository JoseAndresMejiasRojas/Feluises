@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model FeLuisesScrumDEV.Models.Project

@{
    ViewBag.Title = "Delete";
}

<link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
@if (Session["userName"] == null)
{

    <div class="container">

        <div class="card">
            <div class="card-header">
                <h2 id="heading-red">No se vale hackear!</h2>
            </div>
            <div class="card-body">
                <h5 class="card-title">Debe logguearse para hacer uso de la aplicación</h5>
                <a href=@Url.Action("Index", "Login") class="btn btn-danger">Volver</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <h2 id="heading-red">Desea eliminar este Proyecto?</h2>
        <div class="card border-dark" id="shadow-Fe1">
            <h2 class="card-header text-white" id="back-Fe1"> @Model.projectName?</h2>
            <div class="card-body"> <!--inicio del cuerpo de la card (sección del medio)-->
                        <div class="form"> <!--Inicio de vista en "formulario"-->
                            <div class="form-row"> <!--Inicio de fila-->
                                <div class="col"><!--Inicio de columna-->
                            <div class="form-group">
                                <b>Nombre del Proyecto</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.projectName)
                                    @if (Model.projectName == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <b>Objetivo</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.objective)
                                    @if (Model.objective == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <b>Cliente</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Client.clientName)
                                    @if (Model.Client.clientName == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <b>Líder</b>
                                <div class="col-md-10">
                                    @Html.Display("idLiderFK")<!--Este display llama un viewbag del controlador-->
                                </div>
                            </div>
                        </div><!--Fin de columna-->
                        <div class="col">
                            <div class="form-group">
                                <b>Costo Estimado</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.estimatedCost)
                                    @if (Model.estimatedCost == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <b>Costo Real</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.realCost)
                                    @if (Model.realCost == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <b>Presupuesto</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.budget)
                                    @if (Model.budget == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>
                        </div><!--Fin de columna-->
                        <div class="col">
                            <div class="form-group">
                                <b>Fecha de Inicio</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.startingDate)
                                    @if (Model.startingDate == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <b>Fecha de Finalización</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.finishingDate)
                                    @if (Model.finishingDate == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <b>Duración Estimada</b>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.estimatedDuration)
                                    @if (Model.estimatedDuration == null)
                                    {
                                        <p class="card-text text-info">Informacion no disponible</p>
                                    }
                                </div>
                            </div>
                        </div><!--Fin de columna-->
                    </div><!--Fin de form-row-->
                </div><!--Fin de class form-->
            </div><!--Fin del card-body-->
            <div class="card-footer" id="back-Fe1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">

                        <input type="image" src="~/Images/accept.svg" class="btn btn-outline-success" alt="Submit" />

                        <a class="btn btn-outline-danger" role="button" href="@Url.Action("Details", "Projects", new { id = Model.idProjectPK })">
                            <img src="~/Images/cancel.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                        </a>

                    </div>
                }
            </div><!--Fin del card-footer-->
        </div><!--Fin del card-->
    </div><!--Fin del container-->
}