<html>
@model IEnumerable<FeLuisesScrumDEV.Models.Project>
<head>
    @{
        ViewBag.Title = "IndexProjects";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#ProjectCards").show();
            $("#ProjectsTable").hide();
            $("#toggle").click(function () {
                $("#ProjectsTable").toggle();
                $("#ProjectCards").toggle();
            });
        });
    </script>


</head>

<body>
    <div class="container">
        <h2>Proyectos</h2>


        <section id="ProjectCards">
            <div class="card-deck">
                <div class="card-columns">
                    @foreach (var item in Model)
                    {
                        <div class="card mb-3 border-dark rounded" id="shadow-Fe1" style="width: 24rem; height: auto;">
                            <div class="card-header" id="back-Fe1">
                                <a class="btn text-white" role="button" href=@Url.Action("Details", "Projects", new { id = item.idProjectPK })>@item.projectName</a>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Client name: @item.Client.clientName</p>
                                <p class="card.text">Objective: @item.objective</p>
                                <p class="card-text">Actual Cost: @item.realCost</p>
                            </div>
                            <div class="card-footer text-white-50 text-center" id="back-Fe1">
                                @Html.DisplayFor(modelItem => item.startingDate)
                                @if (item.startingDate == null)
                                {
                                    <p class="card-text">Informacion no disponible</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <table id="ProjectsTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.projectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.objective)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.estimatedCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.realCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.startingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.finishingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.budget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.estimatedDuration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Client.clientName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.projectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.objective)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.estimatedCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.realCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.startingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.finishingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.budget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.estimatedDuration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.clientName)
                        </td>
                        <td>
                            <a class="btn" role="button" href="@Url.Action("Edit", "Projects", new { id = item.idProjectPK } )">
                                <img src="~/Images/edit.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                            </a>
                            <a class="btn" role="button" href="@Url.Action("Details", "Projects", new { id = item.idProjectPK } )">
                                <img src="~/Images/details.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                            </a>
                            <a class="btn" role="button" href="@Url.Action("Delete", "Projects", new { id = item.idProjectPK } )">
                                <img src="~/Images/delete.svg" width="25" height="25" class="d-inline-block align-top" alt="">
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn" role="button" href=@Url.Action("Create", "Projects")>
        <img src="~/Images/add.svg" width="60" height="60" class="d-inline-block align-top" alt="">
    </a>
    <div class="float-md-right">
        <button type="button" class="btn btn-info" id="toggle">Cambiar vista</button>
    </div>

</body>
</html>