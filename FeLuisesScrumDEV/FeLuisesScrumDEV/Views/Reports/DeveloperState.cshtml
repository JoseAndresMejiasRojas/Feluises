<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        @{
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
    </head>

    <body>
         if (Session["userName"] == null && (Convert.ToInt32(Session["userRole"]) != 0 || Convert.ToInt32(Session["userRole"]) != 2 ) )
        {

            <div class="container">

                <div class="card">
                    <div class="card-header">
                        <h2 id="heading-red">No se vale hackear!</h2>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Debe logguearse para hacer uso de la aplicación</h5>
                        <a href=@Url.Action("Index", "Login") class="btn btn-danger">Volver</a>
                    </div>
                </div>
            </div>
        }else{

            <div class="container">

                <div class="card border-dark rounded" id="shadow-Fe1" style="width:auto; height:auto;">
                    <h2 class="card-header text-white" id="back-Fe1">Administrar Equipo</h2>
                    <div class="card-body">
                        <table id="employeesIndex" class="table table-striped table-bordered">

                            <thead>
                                <tr>
                                    <th>
                                        Nombre Desarrolladores
                                    </th>
                                    <th>
                                       Proyecto
                                    </th>
                                    <th>
                                        Fecha inicio
                                    </th>
                                    <th>
                                        Fecha estimada finalización
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in ViewBag.EmployeesInProyects)
                                {
                                    <tr>
                                        <td>
                                            item.Nombre_Desarrollador
                                        </td>
                                        <td>
                                            item.Nombre_Proyecto
                                        </td> 
                                        <td>
                                            item.Fecha_Inicio
                                        </td>
                                        <td>
                                            item.Fecha_Estimada
                                        </td> 

                                    </tr>
                                }
                            </tbody>
                        </table>

                        
                    </div>
                </div>
            </div>
        }
    }

    </body>
</html>
