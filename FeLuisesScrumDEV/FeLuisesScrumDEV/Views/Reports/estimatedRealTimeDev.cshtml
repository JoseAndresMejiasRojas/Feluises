<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @model IEnumerable<FeLuisesScrumDEV.viewModel.estimatedRealTimeDevModel>
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
    <style>
        #tabla1 {
            padding: 10px
        }

        #tabla2 {
            padding: 10px;
            float: right;
        }

        td {
            border: 1px solid #000;
        }

        tr td:last-child {
            width: 1%;
            white-space: nowrap;
        }
    </style>
</head>

<body>
    @if (Session["userName"] == null && (Convert.ToInt32(Session["userRole"]) != 0 || Convert.ToInt32(Session["userRole"]) != 2))
    {

        <div class="container">

            <div class="card">
                <div class="card-header">
                    <h2 id="heading-red">No se vale hackear!</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Debe logguearse para hacer uso de la aplicación</h5>
                    <a href=@Url.Action("Index", "Login") class="btn btn-danger">Volver</a>
                </div>
            </div>
        </div>
    }
    else
    {

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <center>
                <br />
                <b>Duracion real y estimada para los requerimientos de un desarrollador.</b>
            </center>
        </div>
        <div class="col-md-6">
            <center>
                <br />
                @*<b>Desarrolladores disponibles</b>*@
            </center>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <center>
                <table id="tabla1" class="table table-striped table-bordered">

                    <thead>
                        <tr>
                            <th>
                                Desarrollador
                            </th>
                            <th>
                                Proyecto
                            </th>
                            <th>
                                Objetivo Req.
                            </th>
                            <th>
                                Complejidad
                            </th>
                            <th>
                                Duracion estimada
                            </th>
                            <th>
                                Duracion real
                            </th>
                            <th>
                                Diferiencia
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ToList())
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DesarrolladorNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Proyecto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Requerimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Complejidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DuracionEstimada)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DuracionReal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Diferencia)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </center>
        </div>
        <br />
    </div>
</div>
    }
</body>
</html>
