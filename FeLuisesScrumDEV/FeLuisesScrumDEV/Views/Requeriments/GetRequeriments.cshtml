@model IEnumerable<FeLuisesScrumDEV.Models.Requeriment>
@{
    ViewBag.Title = "DetailsSummary";

}
<head>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="row">
        @if (!(Model == null))
        {
            string[] states = { "No iniciado", "En proceso", "Interrumpido", "Completado" };
            foreach (var requeriment in Model)
            {
                <div class="col-sm-6">
                    <div class="card"style="margin-top: 15px">
                        <div class="card-header" id="back-Fe">
                            <a class="btn text-white" role="button" href="@Url.Action("Details", "Requeriments", new { idProjectFKPK=requeriment.idProjectFKPK, idModuleFKPK=requeriment.idModuleFKPK, idRequerimentPK=requeriment.idRequerimentPK } )"><b>Req. @requeriment.objective</b></a>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><b>Desarrollador asignado:</b> @requeriment.Employee.employeeName @requeriment.Employee.employeeLastName</p>
                            <p class="card-text"><b>Estado:</b> @states[(int)requeriment.status]</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</body>
