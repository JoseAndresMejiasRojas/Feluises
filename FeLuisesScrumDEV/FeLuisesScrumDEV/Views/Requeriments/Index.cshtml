<html>
@model IEnumerable<FeLuisesScrumDEV.Models.Requeriment>
<head>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#idProjectFKPK").change(function () {
                var categoryId = $("#idProjectFKPK").val();
                $("#modulescard").load('@(Url.Action("SelectModule","Requeriments",null, Request.Url.Scheme))?idProjectFKPK=' + categoryId);
            });
        });
    </script>
</head>


<body>
    <h2>Requerimientos</h2>

    <div id="projectcard">
        <div class="card border-dark rounded mb-3" id="shadow-Fe" style="width: auto; height:auto;">
            <div class="card-header" id="back-Fe1">
                <p class="card-text text-white">
                    <div class="dropdown">
                        @Html.DropDownList("idProjectFKPK", null, "Select Project")
                    </div>
                </p>
            </div>
            <div class="card-body">
                <div id="modulescard">
                </div>
            </div>
        </div>
        <p></p>

    </div>
</body>
</html>
