    <!DOCTYPE html>

 <html>
    @model FeLuisesScrumDEV.Models.WorksIn
    <head>

        @{
            ViewBag.Title = "Create";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Create Team</title>

        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

        <style>
            #sortable1, #sortable2 {
                border: 1px solid #eee;
                width: 360px;
                min-height: 20px;
                list-style-type: none;
                margin: 0;
                padding: 5px 0 0 0;
                float: left;
                margin-right: 10px;
                align-content: center;
            }

                #sortable1 li, #sortable2 li {
                    margin: 0 5px 5px 5px;
                    padding: 5px;
                    font-size: 1.2em;
                    width: 360px;
                }
        </style>

        <script>
            $(function () {
                $("#sortable1, #sortable2").sortable({
                    connectWith: ".connectedSortable"
                }).disableSelection();
            });
        </script>

        <script type="text/javascript">


            function myFunction() {
                var list = [];
                document.querySelectorAll("#sortable2 li")
                    .forEach(function (item) {
                        var aux = item.textContent.split(" ");
                        list.push(aux[0]);
                    });

                var p = document.getElementById("idProjectFKPK");
                var project = p.options[p.selectedIndex].getAttribute("value");
                console.log(project);
                console.log(list)
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: '@Url.Action("Create", "WorksIns")',
                    traditional: true,
                    data: {
                        teamMembers: list,
                        currentProject: project
                    },
                    succes: function () {
                        console.log("succes");
                    },
                    error: function (errorList) {
                        console.log(errorList);
                        console.log("error");
                    }
                })

            }
        </script>

    </head>
    @using (Html.BeginForm())
    {
        <body>

            <div class="container">
                <h2>Crear Equipo</h2>
                <hr>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <center>
                            <label>Nombre proyecto: </label>
                            @Html.DropDownList("idProjectFKPK", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idProjectFKPK, "", new { @class = "text-danger" })
                        </center>
                    </div>
                    <div class="col-md-6">
                        <center>
                            <b>Lider: </b>
                        </center>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <center>
                            <b>Buscar por habilidades</b>
                            <!--Aqui va la barra de busqueda-->
                        </center>
                    </div>
                    <div class="col-md-6">
                        <center>
                            <b>Posibles Miembros</b>
                        </center>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <center>

                            <!--Aqui van solo empleados disponibles que se filtraron-->
                            <ul id="sortable1" class="connectedSortable">
                                @foreach (var item in ViewBag.idEmployeeFKPK)
                                {
                                    <li class="ui-state-default" id="@item.Value">@item.Value @item.Text </li>
                                }

                            </ul>
                        </center>
                    </div>
                    <div class="col-md-6">
                        <center>
                            <!--Aqui van los que arrastre que serian los  que voy  a agregar-->
                            <ul id="sortable2" class="connectedSortable">
                                @*<li class="ui-state-highlight">Item 1</li>*@


                            </ul>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="button" value="Create" class="btn btn-default" onclick="myFunction();" />
                                </div>
                            </div>
                        </center>
                    </div>
                </div>

            </div>
        </body>
    }
</html>
