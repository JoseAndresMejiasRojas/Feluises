@model IEnumerable<FeLuisesScrumDEV.Models.WorksIn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Index-Teams</title>
        <style>
            /*Para resumir texto*/
            .ellipsis {
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                max-width: 150px;
            }
        </style>
        <script>
            $(document).ready(function () {
                $('#clientsIndex').DataTable();
            });
        </script>
    </head>


    <body>

        <div class="container">
            <table id="clientsIndex" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Rol
                            @*@Html.DisplayNameFor(model => model.role)*@
                        </th>
                        <th>
                            Nombre
                            @*@Html.DisplayNameFor(model => model.Employee.employeeName)*@
                        </th>
                        <th>
                            Apellido
                        </th>
                        <th>
                            Conocimiento
                            @*@Html.DisplayNameFor(model => model.Employee.employeeName)*@
                        </th>
                        <th>
                            Nombre del proyecto
                            @*@Html.DisplayNameFor(model => model.Project.projectName)*@
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn" role="button" href="@Url.Action("Details", "WorksIns", new { idEmployeeFKPK = item.idEmployeeFKPK, idProjectFKPK = item.idProjectFKPK } )">@Html.DisplayFor(modelItem => item.role)</a>
                            </td>
                            <td>
                                <a class="btn" role="button" href="@Url.Action("Details", "WorksIn", new { idEmployeeFKPK = item.idEmployeeFKPK, idProjectFKPK = item.idProjectFKPK } )">@Html.DisplayFor(modelItem => item.Employee.employeeName)</a>
                            </td>
                            <td>
                                <a class="btn" role="button" href="@Url.Action("Details", "WorksIns", new { idEmployeeFKPK = item.idEmployeeFKPK, idProjectFKPK = item.idProjectFKPK } )">@Html.DisplayFor(modelItem => item.Employee.employeeLastName)</a>
                            </td>
                            <td class="ellipsis">
                                <a class="btn" role="button" href="@Url.Action("Details", "WorksIns", new { idEmployeeFKPK = item.idEmployeeFKPK, idProjectFKPK = item.idProjectFKPK } )">@Html.DisplayFor(modelItem => item.Employee.DeveloperKnowledge)</a>
                            </td>
                            <td>
                                <a class="btn" role="button" href="@Url.Action("Details", "WorksIns", new { idEmployeeFKPK = item.idEmployeeFKPK, idProjectFKPK = item.idProjectFKPK } )">@Html.DisplayFor(modelItem => item.Project.projectName)</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a class="btn btn-outline" role="button" href=@Url.Action("Create", "WorksIns" )>
                    <img src="~/Images/add.svg" width="60" height="60" class="d-inline-block align-top" alt="">
                </a>
            </p>
        </div>
    </body>
</html>
